<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_udp_broadcast_send_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始发送广播"/>

        <Button
            android:id="@+id/btn_udp_broadcast_send_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关闭发送广播"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_udp_broadcast_rec_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始接收广播"/>

        <Button
            android:id="@+id/btn_udp_broadcast_rec_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关闭接收广播"/>

    </LinearLayout>

</LinearLayout>