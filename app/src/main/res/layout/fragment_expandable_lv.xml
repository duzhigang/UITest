<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn_expandable_lv_modify_frag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新页面修改数据"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height= "wrap_content"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/btn_expandable_lv_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改G3名字"/>

        <Button
            android:id="@+id/btn_expandable_lv_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改G2S4"/>

        <Button
            android:id="@+id/btn_expandable_lv_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="增加G5"/>

        <Button
            android:id="@+id/btn_expandable_lv_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="增加G4S"/>

    </LinearLayout>

    <ExpandableListView
        android:id="@+id/elv_grades"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>