<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_alert_dialog">

        <TextView
            android:id="@+id/tv_dialog_my_alert_title"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            tools:text="提示"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tv_dialog_my_alert_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:lineSpacingExtra="5dp"
            android:textColor="@android:color/black" />

        <View
            android:layout_marginTop="13dp"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <Button
                android:id="@+id/btn_dialog_my_alert_nag"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                tools:text="取消"
                android:textSize="17sp"
                android:textColor="@android:color/holo_blue_dark"
                android:background="@drawable/button_pressed_selector"/>

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="#757575"/>

            <Button
                android:id="@+id/btn_dialog_my_alert_pos"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                tools:text="确认"
                android:textSize="17sp"
                android:textColor="@android:color/holo_blue_dark"
                android:background="@drawable/button_pressed_selector"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>