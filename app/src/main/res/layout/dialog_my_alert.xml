<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/tv_dialog_my_alert_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="5dp"
            tools:text="提示"
            android:textSize="19sp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tv_dialog_my_alert_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="5dp"
            tools:text="Dialog说明"
            android:textSize="17sp"
            android:textColor="@android:color/black" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_dialog_my_alert_nag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_btn_cancel_border_bg"
            android:gravity="center"
            android:minHeight="44dp"
            tools:text="取消"
            android:textSize="17sp"
            android:textColor="@android:color/holo_blue_dark" />

        <Button
            android:id="@+id/btn_dialog_my_alert_pos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_btn_confirm_border_bg"
            android:gravity="center"
            android:minHeight="44dp"
            tools:text="确认"
            android:textSize="17sp"
            android:textColor="@android:color/holo_blue_dark" />
    </LinearLayout>

</LinearLayout>