<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ggec.uitest.ui.MainActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_act_nsd_chat_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="状态"/>

    <Button
        android:id="@+id/btn_act_nsd_chat_register_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="注册NSD Service"/>

    <Button
        android:id="@+id/btn_act_nsd_chat_client_discover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:text="启动NSD Client发现"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/btn_act_nsd_connect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="建立连接"/>

        <EditText
            android:id="@+id/et_act_nsd_chat_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="输入发送数据"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_act_nsd_chat_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="发送数据"/>

</LinearLayout>