<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ggec.uitest.ui.nsd.NsdServerActivity"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <EditText
        android:id="@+id/et_act_nsd_server_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:hint="请输入NSD Server名字"
        android:textColorHint="@android:color/secondary_text_light"
        android:inputType="text"
        android:textSize="14sp"
        android:ellipsize="end"
        android:textColor="@android:color/white"
        tools:text="NSD Server名字"
        android:maxLines="1"
        android:gravity="center_vertical"
        android:theme="@style/MyEditText"/>

    <Button
        android:id="@+id/btn_act_nsd_server_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="重置NSD Server端"/>

    <TextView
        android:id="@+id/tv_act_nsd_server_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        tools:text="NSD Server名字"/>

    <TextView
        android:id="@+id/tv_act_nsd_server_rec_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        tools:text="NSD Server收到的消息"/>

</LinearLayout>
